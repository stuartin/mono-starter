{
    "name": "@mono/spa",
    "dependencies": {
        "@mono/server": "workspace:*",
        "@mono/shared": "workspace:*",
        "@urql/core": "^5.1.0",
        "@urql/exchange-graphcache": "^7.2.2",
        "@urql/svelte": "^4.2.2",
        "graphql": "^16.10.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.49.1",
        "@sveltejs/adapter-static": "^3.0.8",
        "@sveltejs/kit": "^2.16.0",
        "@sveltejs/vite-plugin-svelte": "^5.0.0",
        "@urql/devtools": "^2.0.3",
        "dotenv-cli": "^8.0.0",
        "eslint": "^9.21.0",
        "svelte": "^5.0.0",
        "svelte-check": "^4.0.0",
        "typescript": "^5.0.0",
        "vite": "^6.0.0"
    },
    "private": true,
    "scripts": {
        "build": "vite build",
        "build:prd": "dotenv -e .env.production -- pnpm build",
        "build:stg": "dotenv -e .env.staging -- pnpm build",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "dev": "vite dev",
        "lint": "eslint .",
        "prepare": "svelte-kit sync || echo ''",
        "preview": "vite preview",
        "test": "npm run test:e2e",
        "test:e2e": "playwright test"
    },
    "type": "module"
}